    "build-tests:dev": "tsc --project ./tsconfig-test.json",
    "test": "jest ./dist-test --watch"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^14.14.31",
    "@types/nunjucks": "^3.1.5",
    "http-server": "^0.12.3",
    "jest": "^27.0.6",
    "marked": "^2.1.3",
    "nodemon": "^2.0.12",
    "nunjucks": "^3.2.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.0-beta"
  }
}
